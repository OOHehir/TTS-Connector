              "label": {
                "en": "clusterID"
              },
              "value": ""
            },
            {
              "id": "antennaPlacement",
              "type": "label",
              "label": {
                "en": "antennaPlacement"
              },
              "value": ""
            },
            {
              "id": "pollInterval",
